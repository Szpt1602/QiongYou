<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/des_item_rootrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/des_item_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_qyer_gray_120"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/des_item_ch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="香港"
            android:textColor="@color/public_white"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/des_item_en_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_item_ch_tv"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="Hong Kong"
            android:textColor="@color/public_white"
            android:textSize="15dp"/>
    </RelativeLayout>
</LinearLayout>