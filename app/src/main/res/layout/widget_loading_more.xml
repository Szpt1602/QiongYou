<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/widget_loading_more_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/bg_loadingmore"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/widget_loading_more_tv"
        android:layout_alignStart="@+id/widget_loading_more_tv"/>
    <TextView
        android:paddingLeft="50dp"
        android:id="@+id/widget_loading_more_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/home_loading_more"
        android:textSize="13sp"/>
</RelativeLayout>