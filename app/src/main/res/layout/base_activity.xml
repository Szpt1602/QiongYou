<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/base_act_content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/base_act_custom_title_bar_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#00000000">

        <ImageView
            android:id="@+id/base_ic_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/title_btn_bg_selector"/>

        <TextView
            android:layout_width="0dp"
            android:id="@+id/base_tv_title"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/public_white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/base_ic_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/title_btn_bg_selector"/>

    </LinearLayout>

</FrameLayout>