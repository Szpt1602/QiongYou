<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/local_country_ll1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/local_country_iv1"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/local_country_tv1"
            android:text="日本"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/local_country_ll2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/local_country_iv2"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/local_country_tv2"
            android:text="日本"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/local_country_ll3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/local_country_iv3"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/local_country_tv3"
            android:text="日本"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>