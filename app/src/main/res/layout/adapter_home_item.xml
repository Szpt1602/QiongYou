<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/selector_bg_click_cover">

        <ImageView
            android:id="@+id/adapter_home_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/adapter_home_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_home_iv"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/adapter_home_tv_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/adapter_home_tv_content"
            android:padding="2dp"
            android:textColor="@color/hint_black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/adapter_home_price"
            android:textColor="@color/local_red"
            android:padding="2dp"
            android:layout_alignBottom="@+id/adapter_home_price_text"
            android:layout_toLeftOf="@+id/adapter_home_price_text"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/adapter_home_price_text"
            android:layout_width="wrap_content"
            android:text="@string/home_item_price_text"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="4dp"
            android:layout_alignBottom="@+id/adapter_home_tv_sell"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_black"
            android:textSize="12sp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/adapter_home_sale_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6.5dp"
        android:visibility="gone"
        android:background="@drawable/bg_sale_tag"
        android:textColor="@color/public_white"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:id="@+id/adapter_home_right_tag"
        android:drawablePadding="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/home_hint_tips_bg_shape"
        android:textColor="@color/item_white"
        android:textSize="12sp"/>

</RelativeLayout>