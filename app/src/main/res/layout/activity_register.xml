<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_my_head_layout">
<ImageView
    android:id="@+id/register_activity_back"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/ic_back"/>
    <TextView
        android:id="@+id/register_activity_zhuce_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/register_activity_phone_zhuce_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#Fff"
        android:layout_below="@id/register_activity_zhuce_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="手机号注册"/>



    <TextView
        android:id="@+id/register_activity_tv"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:drawableRight="@drawable/ic_arrow_white"
        android:drawablePadding="20dp"
        android:layout_below="@id/register_activity_phone_zhuce_tv"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:maxEms="5"
        android:ellipsize="end"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"/>
    <View
        android:id="@+id/register_activity_view1"
        style="@style/login_activity_while_line"
        android:layout_below="@id/register_activity_tv"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="210dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/register_activity_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="填写你的手机号"
        android:background="@null"
        android:textColorHint="#e6e6e6"
        android:layout_marginLeft="160dp"
        android:layout_below="@+id/register_activity_phone_zhuce_tv"
        android:layout_alignLeft="@+id/register_activity_tv"/>

    <View
        android:id="@+id/register_activity_view2"
        style="@style/login_activity_while_line"
        android:layout_below="@id/register_activity_et"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="210dp"/>

    <Button
        android:id="@+id/register_activity_next_btn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="下一步"
        android:background="@drawable/register_next_btn"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@id/register_activity_view2"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="#40C895"/>
<TextView
    android:id="@+id/register_activity_mail_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#fff"
    android:layout_below="@id/register_activity_next_btn"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:text="邮箱注册"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/register_activity_mail_tv"/>
</RelativeLayout>